<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="passSystemManager1" transaction-type="RESOURCE_LOCAL">
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <class>pojo.Campus</class>
        <class>pojo.Subject</class>
        <class>pojo.AttendanceSheet</class>
        <class>pojo.PassStaff</class>
        <class>pojo.Result</class>
        <class>pojo.Semester</class>
        <class>pojo.Session</class>
        <class>pojo.Student</class>
        <class>pojo.SubjectEnrol</class>
        <class>pojo.Week</class>
        <class>pojo.PassAttendance</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.user" value="user"/>
            <property name="javax.persistence.jdbc.password" value="password"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/passdb"/>



        </properties>
    </persistence-unit>
</persistence>